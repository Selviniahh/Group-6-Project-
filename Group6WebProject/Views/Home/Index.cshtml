@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (User.Identity.IsAuthenticated)
{
    <h1> Hello @User.Identity.Name </h1>
    @* <h2>Your email is: @User.FindFirst("Email")?.Value</h2> *@
    @* <h2>Your ID is: @User.FindFirst("UserID")?.Value</h2> *@
    
    <h2>Your email is: @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</h2>
    <h2>Your ID is: @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</h2>
}