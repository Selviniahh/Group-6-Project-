@model Group6WebProject.Models.CreditCard

@{
    ViewData["Title"] = "Delete Credit Card";
}

<h2>Delete Credit Card</h2>

<div>
    <h4>Are you sure you want to delete this credit card?</h4>
    <dl class="row">
        <dt class="col-sm-2">Cardholder Name</dt>
        <dd class="col-sm-10">@Model.CardHolderName</dd>

        <dt class="col-sm-2">Card Number</dt>
        <dd class="col-sm-10">**** **** **** @Model.CardNumber.Substring(Model.CardNumber.Length - 4)</dd>

        <dt class="col-sm-2">Expiration</dt>
        <dd class="col-sm-10">@Model.ExpirationMonth.ToString("D2")/@Model.ExpirationYear</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CreditCardID)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
