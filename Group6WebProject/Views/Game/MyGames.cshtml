
@model List<Group6WebProject.Models.Game>

@{
    ViewBag.Title = "My Games";
}

<h2>My Games</h2>

@if (!Model.Any())
{
    <p>You don't have any games available for download.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Game Title</th>
            <th>Genre</th>
            <th>Platform</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Genre</td>
                <td>@game.Platform</td>
                <td>@game.ReleaseDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Download" asp-route-id="@game.Id" class="btn btn-primary">Download</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}