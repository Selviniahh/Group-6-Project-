
@model List<Game>
@{
ViewBag.Title = "Game Management";
Layout = "_Layout";
}

<h2>Game Management</h2>
<form method="post" action="/Admin/AddGame">
    <label for="Title">Game Title</label>
    <input type="text" id="Title" name="Title" required/>

    <label for="Description">Description</label>
    <input type="text" id="Description" name="Description" required/>

    <label for="ReleaseDate">Release Date</label>
    <input type="date" id="ReleaseDate" name="ReleaseDate" required/>

    <label for="Genre">Genre</label>
    <input type="text" id="Genre" name="Genre" required/>

    <label for="Price">Price</label>
    <input type="text" id="Price" name="Price" required/>

    <label for="Platform">Platform</label>
    <input type="text" id="Platform" name="Platform" required/>

    <button type="submit">Add Game</button>
</form>

<table border="1">
    <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Release Date</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Platform</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var game in Model)
    {
    <tr>
        <td>@game.Id</td>
        <td>@game.Title</td>
        <td>@game.Description</td>
        <td>@game.ReleaseDate.ToString("yyyy-MM-dd")</td>
        <td>@game.Genre</td>
        <td>@game.Price</td>
        <td>@game.Platform</td>
        <td>
            <a asp-action="EditGame" asp-route-id="@game.Id">Edit</a>
            |
            <a asp-action="DeleteGame" asp-route-id="@game.Id">Delete</a>

        </td>
    </tr>
    }
    </tbody>
</table>
