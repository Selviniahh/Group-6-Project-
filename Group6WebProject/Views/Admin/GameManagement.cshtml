@model List<Game>
@{
    ViewBag.Title = "Game Management";
    Layout = "_Layout";
}
<div asp-validation-summary="All" class="text-danger"></div>

<h2>Game Management</h2>

<form method="post" action="/Admin/AddGame" style="max-width: 600px; margin-bottom: 20px;">
    <div class="form-group">
        <label for="Title">Game Title</label>
        <input type="text" id="Title" name="Title" required class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" required class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="ReleaseDate">Release Date</label>
        <input type="date" id="ReleaseDate" name="ReleaseDate" required class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Genre">Genre</label>
        <select id="Genre" name="Genre" class="form-control">
            <option value="">Select Genre</option>
            @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre">@genre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" id="Price" name="Price" required class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Platform">Platform</label>
        <select id="Platform" name="Platform" class="form-control">
            <option value="">Select Platform</option>
            @foreach (var platform in ViewBag.Platforms)
            {
                <option value="@platform">@platform</option>
            }
        </select>
    </div>

    <!-- DownloadUrl -->
    <div class="form-group">
        <label for="DownloadUrl">Download URL</label>
        <input type="text" id="DownloadUrl" name="DownloadUrl" class="form-control" />
    </div>

    <!-- ImageFileName -->
    <div class="form-group">
        <label for="ImageFileName">Image File Name</label>
        <input type="text" id="ImageFileName" name="ImageFileName" class="form-control" />
    </div>

    <!-- VideoUrl -->
    <div class="form-group">
        <label for="VideoUrl">Video URL</label>
        <input type="text" id="VideoUrl" name="VideoUrl" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Add Game</button>
</form>

<!-- GameManagement.cshtml -->

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Release Date</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Platform</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var game in Model)
    {
    <tr>
        <td>@game.Id</td>
        <td>@game.Title</td>
        <td>@game.Description</td>
        <td>@game.ReleaseDate.ToString("yyyy-MM-dd")</td>
        <td>@game.Genre</td>
        <td>@game.Price)</td>
        <td>@game.Platform</td>
        <td>
            <a asp-action="EditGame" asp-route-id="@game.Id" class="btn btn-sm btn-info">Edit</a>
            <a asp-action="DeleteGame" asp-route-id="@game.Id" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
