@model List<Event>

@{
ViewBag.Title = "Event Management";
Layout = "_Layout";
}

<h2>Event Management</h2>

<form method="post" action="/Admin/AddEvent" style="max-width: 600px; margin-bottom: 20px;">
    <div class="form-group">
        <label for="Name">Event Name</label>
        <input type="text" id="Name" name="Name" required class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" required class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="EventDate">Event Date</label>
        <input type="date" id="EventDate" name="EventDate" required class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Event</button>
</form>
<h1><strong>UPCOMING EVENTS</strong> </h1>

<table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Event Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model)
    {
    <tr>
        <td>@eventItem.Id</td>
        <td>@eventItem.Name</td>
        <td>@eventItem.Description</td>
        <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
        <td>
            <a asp-action="EditEvent" asp-route-id="@eventItem.Id">Edit</a>
            <a asp-action="DeleteEvent" asp-route-id="@eventItem.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

