@model List<GameReview>

@{
    ViewData["Title"] = "Review Management";
}

<h1>Review Management</h1>

<p>Here you can approve or reject reviews submitted by users for games.</p>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Game</th>
            <th>Review Text</th>
            <th>Submission Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.User.Name</td>
                <td>@review.Game.Title</td>
                <td>@review.ReviewText</td>
                <td>@review.SubmissionDate.ToString("yyyy-MM-dd")</td>
                <td>@review.ReviewStatus</td>
                <td>
                    @if (review.ReviewStatus == "Pending")
                    {
                        <a href="@Url.Action("ApproveReviewConfirmed", "Admin", new { reviewId = review.GameReviewID })" class="btn btn-success">Approve</a>
                        <a href="@Url.Action("RejectReviewConfirmed", "Admin", new { reviewId = review.GameReviewID })" class="btn btn-danger">Reject</a>
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
