@model Group6WebProject.Data.User

<h1>Member Detail Report for @Model.Name</h1>

<table>
    <tr>
        <td>Member ID:</td>
        <td>@Model.UserID</td>
    </tr>
    <tr>
        <td>Display Name:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Is Admin:</td>
        <td>@Model.IsAdmin</td>
    </tr>
</table>

<h2>Reviews</h2>
<table>
    <thead>
    <tr>
        <th>Game Title</th>
        <th>Review Text</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var review in Model.Reviews)
    {
        <tr>
            <td>@review.Game.Title</td>
            <td>@review.ReviewText</td>
            <td>@review.SubmissionDate.ToString("yyyy-MM-dd")</td>
        </tr>
    }
    </tbody>
</table>

<h2>Events</h2>
<table>
    <thead>
    <tr>
        <th>Event Title</th>
        <th>Event Date</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model.Events)
    {
        <tr>
            <td>@eventItem.Name</td>
            <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
            <td>@eventItem.Description</td>
        </tr>
    }
    </tbody>
</table>