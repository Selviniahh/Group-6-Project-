@model Group6WebProject.Models.MemberDetailViewModel

<h2>Member Detail Report</h2>

<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: center;
        font-size: 24px;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

<table>
    <tbody>
    <tr>
        <th>Member ID:</th>
        <td>@Model.User.UserID</td>
    </tr>
    <tr>
        <th>Display Name:</th>
        <td>@Model.User.Name</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.User.Email</td>
    </tr>
    <tr>
        <th>Is Admin:</th>
        <td>@Model.User.IsAdmin</td>
    </tr>
    </tbody>
</table>

@if (Model.User.Reviews != null && Model.User.Reviews.Any())
{
    <h2>Reviews</h2>
    <table>
        <thead>
        <tr>
            <th>Game Title</th>
            <th>Review Text</th>
            <th>Submission Date</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var review in Model.User.Reviews)
        {
            <tr>
                <td>@review.Game?.Title</td>
                <td>@review.ReviewText</td>
                <td>@review.SubmissionDate.ToString("yyyy-MM-dd")</td>
                <td>@review.ReviewStatus</td>
            </tr>
        }
        </tbody>
    </table>
    @if (Model.RegisteredEvents != null && Model.RegisteredEvents.Any())
    {
        <h2>Registered Events</h2>
        <table>
            <thead>
            <tr>
                <th>Event Title</th>
                <th>Event Date</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var eventItem in Model.RegisteredEvents)
            {
                <tr>
                    <td>@eventItem.Name</td>
                    <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
                    <td>@eventItem.Description</td>
                </tr>
            }
            </tbody>
        </table>
    }
}
