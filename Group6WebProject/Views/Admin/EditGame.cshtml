@model Group6WebProject.Models.Game

<h2>Edit Game</h2>

<form asp-action="EditGame" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" type="date" class="form-control"/>
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" class="form-control" asp-items="new SelectList(ViewBag.Genres)">
            <option value="">Select Genre</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Platform"></label>
        <select asp-for="Platform" class="form-control" asp-items="new SelectList(ViewBag.Platforms)">
            <option value="">Select Platform</option>
        </select>
        <span asp-validation-for="Platform" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DownloadUrl"></label>
        <input asp-for="DownloadUrl" class="form-control" />
        <span asp-validation-for="DownloadUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFileName"></label>
        <input asp-for="ImageFileName" class="form-control" />
        <span asp-validation-for="ImageFileName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VideoUrl"></label>
        <input asp-for="VideoUrl" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="GameManagement" class="btn btn-secondary">Cancel</a>
    </div>
</form>