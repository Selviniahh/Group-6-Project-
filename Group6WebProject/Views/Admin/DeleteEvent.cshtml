@model Group6WebProject.Models.Event

@{
    ViewBag.Title = "Confirm Delete Event";
    Layout = "_Layout";
}
<h2>Delete Game</h2>
<div>
    <h4>Are you sure you want to delete this event?</h4>
    
    <h5>Title: @Model.Name</h5>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Release Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd")</p>

    <form asp-action="DeleteEventConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="EventManagement" class="btn btn-secondary">Cancel</a>
    </form>
</div>