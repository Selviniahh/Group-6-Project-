@model List<Review>

@{
ViewBag.Title = "Game Reviews Management";
Layout = "_Layout";
}

<h2>Game Reviews</h2>

<form method="post" action="/Admin/AddReview" style="max-width: 600px; margin-bottom: 20px;">
    <div class="form-group">
        <label for="GameTitle">Game Title</label>
        <input type="text" id="GameTitle" name="GameTitle" required class="form-control" />
    </div>

    <div class="form-group">
        <label for="ReviewText">Review</label>
        <textarea id="ReviewText" name="ReviewText" required class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Review</button>
</form>

<table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Game Title</th>
        <th>Review</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var review in Model)
    {
    <tr>
        <td>@review.Id</td>
        <td>@review.GameTitle</td>
        <td>@review.ReviewText</td>
        <td>@review.Status</td>
    </tr>
    }
    </tbody>
</table>

