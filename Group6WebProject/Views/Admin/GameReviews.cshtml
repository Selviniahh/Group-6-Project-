@model List<Review>

@{
ViewBag.Title = "Game Reviews Management";
Layout = "_Layout";
}

<h2>Game Reviews</h2>

<form method="post" action="/Admin/AddReview" style="max-width: 600px; margin-bottom: 20px;">
    <div class="form-group">
        <label for="GameTitle">Game Title</label>
        <input type="text" id="GameTitle" name="GameTitle" required class="form-control" />
    </div>

    <div class="form-group">
        <label for="ReviewText">Review</label>
        <textarea id="ReviewText" name="ReviewText" required class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Review</button>
</form>

<table class="table" style="width: 100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Game Title</th>
        <th>Review</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var review in Model)
    {
    <tr>
        <td>@review.Id</td>
        <td>@review.GameTitle</td>
        <td>@review.ReviewText</td>
        <td>@review.Status</td>
    </tr>
    }
    </tbody>
</table>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        color: white;
        background-color: #007bff;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    table {
        margin-top: 20px;
        border: 1px solid #ddd;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>
