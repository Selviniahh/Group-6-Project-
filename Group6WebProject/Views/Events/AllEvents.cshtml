@model List<Group6WebProject.Models.Event>

@{
    ViewBag.Title = "All Events";
}

<h2>All Events</h2>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Event Name</th>
        <th>Description</th>
        <th>Event Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model)
    {
    <tr>
        <td>@eventItem.Id</td>
        <td>@eventItem.Name</td>
        <td>@eventItem.Description</td>
        <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
        <td>
            <!-- Register For Event -->
            <form asp-action="RegisterForEvent" asp-controller="Events" method="post" style="display: inline;">
                <input type="hidden" name="eventId" value="@eventItem.Id" />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>

            <!-- Event Details Link -->
            <a asp-action="EventDetails" asp-controller="Events" asp-route-id="@eventItem.Id" class="btn btn-secondary">Details</a>
        </td>
    </tr>
    }
    </tbody>
</table>